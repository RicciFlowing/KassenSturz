
<button {{action 'delete' budget}} class="upper-right"> {{inline-svg 'cross.svg' class="icon"}} </button>
<div class="center heading-container">
  <h3 class="inline center"> {{budget.name}} </h3>
  <progress value={{budget.percentage}} max="100" class="budget-progress">{{budget.percentage}}</progress>
</div>


<section>
  <table class="payments-listing">
    <tr>
      <td>
        <p>
          Neue Zahlung
        </p>
        {{input value=payment.name placeholder="Empfänger"}}
      </td>
      <td>
        <p>
          Noch verfügbar {{balance-display budget.remaining}}
        </p>
        {{input type="number" value=payment.amount min="0"  max=budget.remaining placeholder="Betrag"}}
      </td>
      <td>
        <button {{action 'addPayment'}} class="add-payment"> <span class="plus-sign"> + </span></button>
      </td>
    </tr>
    {{#each budget.payments as |pay|}}
    <tr>
      <td>
        {{pay.name}}
      </td>
      <td>
        {{pay.amount}}
      </td>
      <td>
        {{moment-format pay.date 'do MMM YY'}}
      </td>
    </tr>
    {{/each}}
  </table>
</section>
{{outlet}}
